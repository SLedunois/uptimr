{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@images/*": [
        "./src/main/resources/META-INF/resources/images/*"
      ],
      "@locales/*": [
        "./src/main/resources/locales/*"
      ],
      "@components/*": [
        "./src/main/ts/components/*"
      ],
      "@app/*": [
        "./src/main/ts/*"
      ]
    }
  }
}